<% content_for :page_title,  "Index" %>
    <% if user_signed_in? %>

<div class="section">
	<div class="container">
		<% @posts.each do |post| %>
			
		      <div class="media-content">
			   <div class="card mb-3" style="max-width: auto;">
            <div class="row no-gutters">
             <div class="col-md-4">
		        <p class="title is-4"><%= link_to post.title, post, class:"btn btn-primary"  %></p>
		      </div>
		    </div>
				
		    <div class="comment-count">
		    	<span class="tag is-rounded"><%= post.comments.count %> comments</span>
		    </div>
        
           <% if post.user == current_user%>
          <div>
          <%= link_to 'Edit', edit_post_path(post), class:"btn btn-primary" %> 
        </div>
        <br>
         <div>
               <p>   
                  <%= link_to 'Delete', post, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } %>
               </p>
          <% end %>
		<% end %>
		</div>
	 </div>
	</div>
	</div>
</div>

<br>

<%= link_to 'New Post', new_post_path %>

<%end%>